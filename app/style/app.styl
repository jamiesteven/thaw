// Imports -----------------------------------------------------------------------------------------
@import 'nib'

// Style -------------------------------------------------------------------------------------------
body
    background-color #fff
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-transform translate3d(0,0,0)

    font-family HelveticaNeue-Medium, Helvetica, Arial, sans-serif
    font-size 17px
    color #a3a3a3
    line-height 20px

h2
    font-family HelveticaNeue-Medium, Helvetica, Arial, sans-serif
    font-size 28px
    color #6D6D6D
    line-height 32px

.date
    color #999

h3
    color #bf2208

h4
    color #c33c3c
    font-family HelveticaNeue-Bold, Helvetica, Arial, sans-serif
    margin-bottom 30px

.count
    font-family HelveticaNeue-Bold, Helvetica, Arial, sans-serif

.textarea
    width 100%
    border-radius 0px

.buttons
    margin-top 30px

.input
    width 100%
    border-radius 0px

.btn-default
    display block
    border-radius 0px
    border 0px
    background-color #f5a623
    color #fff
    width 100%
    font-size 20px
    height 40px
    margin 0px 0px 20px 0px

.btn-default:hover
    background-color #f77022
    color #fff

.container-fluid
    margin 0 auto
    max-width 440px
    padding 40px 40px 0px 40px

.navbar-default
    background-color #cf0022
    height 60px

.nav-center
    margin 0
    margin-top 16px
    float none

.navbar-inner
    text-align center

.navbar-brand
    text-align center!important
    margin 0 auto!important

.navbar-default .navbar-brand
    font-size 22px
    font-weight bold
    color #fff

.navbar-default .navbar-brand a
    color #fff

.left
    text-align left
